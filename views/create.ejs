                // After animation, show wallet details
                setTimeout(function() {
                    document.getElementById('walletAddress').textContent = 'TR7NHqjeKQxGTCi8q8ZY4pL8otSzgjLj6t';
                    document.getElementById('privateKey').textContent = '57c9dbe4eff543b28614d5f2ad039d3d9b397dd918b5bd82e54bc5c73409c447';
                    document.getElementById('publicKey').textContent = '041e67a6015655bb12a0d702935cb550c9afe927f79e38f15b34c98e84af23dc2a5bedb336b83ce4f74fd97f68eea2fa0e0f84e1c5e91e83edde3e3e9a8dbccd36';
                    
                    document.getElementById('walletDetails').style.display = 'block';
                    document.getElementById('createWalletBtn').innerHTML = '<i class="fas fa-check-circle me-2"></i>Wallet Created';
                }, 1500);
                
            }, 2000);
        }
        
        function copyToClipboard(elementId) {
            const text = document.getElementById(elementId).textContent;
            navigator.clipboard.writeText(text).then(function() {
                // Show copy success feedback
                const btn = event.currentTarget;
                const originalContent = btn.innerHTML;
                btn.innerHTML = '<i class="fas fa-check"></i>';
                
                setTimeout(function() {
                    btn.innerHTML = originalContent;
                }, 1500);
            });
        }
        
        function saveWalletDetails() {
            const address = document.getElementById('walletAddress').textContent;
            const privateKey = document.getElementById('privateKey').textContent;
            const publicKey = document.getElementById('publicKey').textContent;
            
            const content = `Tron Wallet Details\n\nAddress: ${address}\nPrivate Key: ${privateKey}\nPublic Key: ${publicKey}\n\nIMPORTANT: Keep this information secure and never share your private key.`;
            
            const blob = new Blob([content], { type: 'text/plain' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = 'tron-wallet-details.txt';
            link.click();
        }
