    <div class="container1">
        <header>
            <h1><i class="fas fa-wallet"></i> TronLink Wallet Integration</h1>
        </header>
        
        <div class="card">
            <div class="wallet-status">
                <h2>Wallet Status</h2>
                <p id="status" class="status-disconnected"><i class="fas fa-circle"></i> TronLink not connected</p>
                <button id="connect-btn" onclick="connectToTronLink()">
                    <i class="fas fa-plug"></i> Connect to TronLink
                </button>
                <a href="/create" class="btn btn-success mt-3">
                    <i class="fas fa-plus-circle"></i> Create New Wallet
                </a>
            </div>
            
            <div class="wallet-info">
                <div class="info-item">
                    <span class="label">Address:</span>
                    <p id="wallet" class="value">-</p>
                </div>
                <div class="info-item">
                    <span class="label">Balance:</span>
                    <p id="balance" class="value">-</p>
                </div>
            </div>
        </div>
        
        <div class="card">
            <h2><i class="fas fa-exchange-alt"></i> Transfer Token</h2>
            <div class="form-group">
                <label for="recipient">Recipient Address</label>
                <input type="text" id="recipient" placeholder="TR... Address">
            </div>
            <div class="form-group">
                <label for="amount">Amount</label>
                <div class="amount-input">
                    <input type="number" id="amount" placeholder="0.00">
                    <span class="currency">TRX</span>
                </div>
            </div>
            <button id="transfer-btn" onclick="transferToken()">
                <i class="fas fa-paper-plane"></i> Send Token
            </button>
        </div>
        
        <div class="transaction-status">
            <h3>Transaction Status</h3>
            <p id="transaction">No recent transactions</p>
        </div>
    </div>
